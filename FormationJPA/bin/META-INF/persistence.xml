<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="hibernate" transaction-type="RESOURCE_LOCAL">
    <!-- Provider Hibernate -->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
<class>com.softeam.formation.jpa.metier.modele.Adresse</class>
<class>com.softeam.formation.jpa.metier.modele.Projet</class>
<class>com.softeam.formation.jpa.metier.modele.Salle</class>
<class>com.softeam.formation.jpa.metier.modele.Reunion</class>
<class>com.softeam.formation.jpa.metier.modele.Personne</class>
<class>com.softeam.formation.jpa.metier.modele.Identite</class>
    <properties>
      <!-- Configuration de l'accès à la base de données -->
      <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
      <property name="javax.persistence.jdbc.user" value="sa" />
      <property name="javax.persistence.jdbc.password" value="" />
      <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:hsql://localhost/formation" />
      
      <!-- Dialecte de la base de données -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
      <!-- Log des requêtes sur la console -->
      <property name="hibernate.show_sql" value="true" />
      <!-- Suppression et re-création des tables au démarrage (mode dev) -->
      <property name="hibernate.hbm2ddl.auto" value="update" />
    </properties>
        
      </persistence-unit>
</persistence>
